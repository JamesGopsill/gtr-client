{
  "$schema": "https://json.schemastore.org/package",
  "name": "@jamesgopsill/gtr-client",
  "version": "1.1.0",
  "description": "A Typescript Client for the gateway to research (gtr) UKRI API.",
  "keywords": [
    "Gateway to Research",
    "GtR",
    "UKRI",
    "EPSRC",
    "ESRC",
    "InnovateUK"
  ],
  "main": "./dist/esm/index.js",
  "author": "James Gopsill",
  "license": "MIT",
  "private": false,
  "files": [
    "dist/**/*"
  ],
  "type": "module",
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js",
    "default": "./dist/esm/index.js"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jamesgopsill/gtr-client"
  },
  "bugs": {
    "url": "https://github.com/jamesgopsill/gtr-client/issues"
  },
  "homepage": "https://jamesgopsill.github.io/gtr-client",
  "scripts": {
    "test": "pnpm jest",
    "build": "rm -rf dist && tsc --project tsconfig.esm.json && tsc --project tsconfig.cjs.json ",
    "build:docs": "typedoc",
    "format": "prettier --write src/**/* && prettier --write __tests__/**/* && prettier --write examples/**/*",
    "pre-add": "pnpm format && pnpm test && pnpm build:docs && pnpm build"
  },
  "devDependencies": {
    "@jest/types": "^29.4.1",
    "@tsconfig/node18-strictest": "^1.0.0",
    "@tsconfig/node18-strictest-esm": "^1.0.1",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "jest": "^29.4.1",
    "prettier": "^2.8.3",
    "prettier-plugin-organize-imports": "^3.2.2",
    "ts-jest": "^29.0.5",
    "typedoc": "^0.23.24",
    "typescript": "^4.9.4"
  }
}
