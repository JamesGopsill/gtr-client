{
	"preset": "ts-jest",
	"rootDir": "__tests__",
	"testRegex": "(.*?).test.ts",
	"testEnvironment": "node",
	"extensionsToTreatAsEsm": [".ts"],
	"maxWorkers": 1,
	"transform": {
		"^.+\\.tsx?$": [
			"ts-jest",
			{
				"tsconfig": "tsconfig.esm.json"
			}
		]
	},
	"moduleNameMapper": {
		"^(\\.{1,2}/.*)\\.js$": "$1"
	}
}
