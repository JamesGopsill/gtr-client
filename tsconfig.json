{
	"extends": "@tsconfig/node16/tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"esModuleInterop": true,
		"strict": true,
		"incremental": false,
		"module": "ES2022",
		"target": "ES2022",
		"moduleResolution": "node",
		"lib": ["DOM"]
	},
	"include": ["src/"],
	"ts-node": {
		"esm": true
	}
}